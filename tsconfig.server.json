{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/server",
    "rootDir": ".",
    "module": "ESNext",
    "target": "ES2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false
  },
  "include": [
    "web/server/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "web/client"
  ]
}
